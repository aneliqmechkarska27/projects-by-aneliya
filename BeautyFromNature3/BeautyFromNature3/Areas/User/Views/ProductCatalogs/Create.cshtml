@model BeautyFromNature3.Domain.ProductCatalog

@{
    ViewData["Title"] = "Създаване";
}

<h1>Добави нови продукти</h1>


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatalogId" class="control-label"></label>
                <select asp-for="CatalogId" class ="form-control" asp-items="ViewBag.CatalogId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="СЪЗДАЙ" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  class="btn btn-outline-light" asp-action="Index"><img src="~/Images/goBackBtn.png" width="25" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
