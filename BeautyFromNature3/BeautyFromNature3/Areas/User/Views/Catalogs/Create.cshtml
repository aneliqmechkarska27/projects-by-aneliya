@model BeautyFromNature3.Domain.Catalog

@{
    ViewData["Title"] = "Създаване";
}

<h1>Създай нов каталог</h1>


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="CatalogName" class="control-label"></label>
                <input asp-for="CatalogName" class="form-control" placeholder="Име на каталога..."/>
                <span asp-validation-for="CatalogName" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" text-wrap:normal" type="text" style="height:150px;" placeholder="Описание..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EditDate" class="control-label"></label>
                <input asp-for="EditDate" class="form-control"  />
                <span asp-validation-for="EditDate" class="text-danger"></span>
            </div>

            <div class="text-danger">
                @ViewData["Warning"]
            </div>

            <div class="form-group">
                <input type="submit" value="СЪЗДАЙ" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-light" asp-action="Index"><img src="~/Images/goBackBtn.png" width="25" /></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
