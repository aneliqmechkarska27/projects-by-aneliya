@page
@model LoginModel

<br />
@{
    ViewData["Title"] = "ВХОД";
}

<h1 class="text-secondary">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <div class="form-floating mb-3">
                       
                        <input asp-for="Input.NickName" class="form-control" id="floatingInput" placeholder="Потребителско име">
                    
                    </div>

                    <div class="form-floating mb-3">
                        
                        <input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="Парола">
                        
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br />

                <div class="log form-group">
                    <button  type="submit" class="btn btn-primary col-md-12">Вход</button><br /><br />
                    <a  class="btn btn-primary col-md-12" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямате акаунт? Създаване на нов профил.</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

