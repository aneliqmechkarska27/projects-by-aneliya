@page
@model IndexModel
@{
    ViewData["Title"] = "Моят профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<br />
<h4 class="text-secondary">@ViewData["Title"]</h4>
<div>Ако желаете може да направите промени</div>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6"><br />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-floating col-md-10">
                        <input asp-for="Input.UserName" class="form-control" id="floatingInput" placeholder="Потребителско име">
                        <label asp-validation-for="Input.UserName" for="floatingInput">Потребителско име</label>
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="form-floating col-md-10">
                        <input asp-for="Input.FirstName" class="form-control" id="floatingInput" placeholder="Име">
                        <label asp-validation-for="Input.FirstName" for="floatingInput">Име</label>
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="form-floating col-md-10">
                        <input asp-for="Input.LastName" class="form-control" id="floatingInput" placeholder="Фамилия">
                        <label asp-validation-for="Input.LastName" for="floatingInput">Фамилия</label>
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="form-floating col-md-10">
                        <input asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="Имейл">
                        <label asp-validation-for="Input.Email" for="floatingInput">Имейл</label>
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="form-floating col-md-10">
                        <input asp-for="Input.PhoneNumber" class="form-control" id="floatingInput" placeholder="Телефонен номер">
                        <label asp-validation-for="Input.PhoneNumber" for="floatingInput">Телефонен номер</label>
                    </div>
                </div>
                <br />

            <button id="update-profile-button" type="submit" class="btn btn-outline-secondary col-md-10">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}