@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на лични данни";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<br />
<h4 class="text-secondary">@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong class="text-secondary">Изтриването на тези данни ще премахне за постоянно вашия акаунт и това не може да бъде възстановено.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password" class="text-secondary"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
    <button class="btn btn-outline-danger" type="submit">Изтриване на данни и затваряне на моя акаунт</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}