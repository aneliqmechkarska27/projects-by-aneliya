@page
@model LogoutModel
@{
    ViewData["Title"] = "ИЗХОД";
}

<header>
    <h1 class="text-secondary">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Щракнете тук, за да излезете</button>
            </form>
        }
        else
        {
            <p>Успешно излязохте от приложението.</p>
        }
    }
</header>