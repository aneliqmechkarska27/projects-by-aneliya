@model BeautyFromNature3.Models.ProductsCreateViewModel
@using BeautyFromNature3.Data

@{
    ViewData["Title"] = "Създаване";
}

<h1>Добави нов продукт</h1>


<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Име на продукта..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" text-wrap:normal" type="text" style="height:150px;" placeholder="Описание..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" id="customFile" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>

            <div class="text-danger">
                @ViewData["Warning"]
            </div>

            <div class="form-group">
                <input type="submit" value="СЪЗДАЙ" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-light" asp-action="Index"><img src="~/Images/goBackBtn.png" width="25" /></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
